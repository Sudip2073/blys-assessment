[
  {
    "name": "wordpress",
    "image": "wordpress:latest",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "WORDPRESS_DB_HOST",
        "value": "wordpress-db:3306"
      },
      {
        "name": "WORDPRESS_DB_USER",
        "value": "wordpress_blys"
      },
      {
        "name": "WORDPRESS_DB_PASSWORD",
        "value": "wordpress_password"
      },
      {
        "name": "WORDPRESS_DB_NAME",
        "value": "wordpress"
      }
    ],
    "dependsOn": [
      {
        "containerName": "wordpress-db",
        "condition": "START"
      }
    ]
  },
  {
    "name": "wordpress-db",
    "image": "mysql:5.7",
    "essential": true,
    "environment": [
      {
        "name": "MYSQL_ROOT_PASSWORD",
        "value": "root_password"
      },
      {
        "name": "MYSQL_DATABASE",
        "value": "wordpress"
      },
      {
        "name": "MYSQL_USER",
        "value": "wordpress_blys"
      },
      {
        "name": "MYSQL_PASSWORD",
        "value": "wordpress_password"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "db_data",
        "containerPath": "/var/lib/mysql"
      }
    ]
  }
] 
